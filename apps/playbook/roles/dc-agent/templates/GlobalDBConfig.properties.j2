{% if db_type == 'kingbase' %}
jdbcUrl=jdbc:kingbase8://{{ mysql_host }}:{{ mysql_port }}/{{ rcx_db }}
driverClassName=com.kingbase8.Driver
{% elif db_type == 'shentong' %}
jdbcUrl=jdbc:oscar://{{ mysql_host }}:{{ mysql_port }}/{{ rcx_db }}
{% elif db_type == 'dm' %}
jdbcUrl=jdbc:dm://{{ mysql_host }}:{{ mysql_port }}/{{ rcx_db }}
{% else %}
jdbcUrl=jdbc:mysql://{{ mysql_host }}:{{ mysql_port }}/{{ rcx_db }}?useUnicode=true&characterEncoding=utf8&autoReconnect=true&useSSL=false
{% endif %}
username={{ mysql_user }}
password={{ mysql_password }}
maximumPoolSize=5
